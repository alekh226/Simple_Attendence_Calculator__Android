<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:id="@+id/gridLayout23"
        android:layout_height="45dp">

        <TextView
            android:text="Present"
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:id="@+id/totalPresent" />

        <TextView
            android:text="Absent"
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:id="@+id/totalAbsent" />

        <TextView
            android:text="TextView"
            android:layout_width="102dp"
            android:layout_height="45dp"
            android:id="@+id/totalPercentage" />

        <Button
            android:text="+"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:id="@+id/addSubject"
            android:layout_row="0"
            android:layout_column="4"
            android:onClick="addSubjectClicked" />
    </GridLayout>

    <TextView
        android:text="TextView"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_below="@+id/gridLayout23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="125dp"
        android:id="@+id/textView222"
        android:gravity="center" />

    <Button
        android:text="&lt;&lt;"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView222"
        android:id="@+id/minusDateButton"
        android:layout_marginLeft="80dp"
        android:onClick="minusDateButtonClicked"/>

    <Button
        android:text="&gt;&gt;"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/textView222"
        android:layout_toRightOf="@+id/textView222"
        android:layout_toEndOf="@+id/textView222"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:id="@+id/plusDateButton"
        android:onClick="plusDateButtonClicked" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:layout_marginTop="92dp"
        android:id="@+id/custom_ListView" />

    <Button
        android:text="UPDATE"
        android:layout_height="45dp"
        android:layout_below="@+id/gridLayout23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonUpdate"
        android:layout_width="80dp" />
</RelativeLayout>