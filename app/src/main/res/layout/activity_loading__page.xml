<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loading__page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.internshala.trainings.attendancecalculator.Loading_Page">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9e8d2"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/userName"
                android:hint="User Name" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:hint="Password" />

            <Button
                android:text="LOGIN"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:id="@+id/logInb"
                android:layout_gravity="center_horizontal" />

            <Button
                android:text="New user ?"
                android:layout_width="113dp"
                android:background="@null"
                android:layout_height="wrap_content"
                android:id="@+id/registerAsk"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:gravity="right|center"
                android:onClick="NewUserClicked" />
            <Button
                android:text="Forget Password ?"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgetPassword"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:gravity="right|center"
                android:onClick="ForgetPasswordClicked" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:text="LOGIN/REGISTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical|center_horizontal" />

    </LinearLayout>

</RelativeLayout>
